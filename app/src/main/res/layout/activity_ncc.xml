<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".armymodule.Army">

    <!-- Background Image -->
    <ImageView
        android:id="@+id/bgImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/nccbackol" /> <!-- Your background image here -->

    <!-- Content over the background -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!-- ARMY Title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="16dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="80dp"

                android:layout_marginTop="150dp"
                android:background="@drawable/nccheadercolour"

                android:elevation="6dp"
                android:gravity="center"
                android:padding="16dp"
                android:text="NCC"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                />


            <!-- Buttons -->


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btncamp"
                android:layout_width="match_parent"
                android:layout_height="89dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/nccbuttonbackgrounds"
                android:text="CAMPS"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnoti"
                android:layout_width="match_parent"
                android:layout_height="86dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/nccbuttonbackgrounds"
                android:text="other information"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />


        </LinearLayout>
    </ScrollView>
</FrameLayout>
